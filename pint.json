{
    "preset": "psr12",
    "lines": {
        "between_class_constants": 1,
        "between_class_properties": 1,
        "between_methods": 1
    },
    "rules": {
        "braces": true,
        "no_unused_imports": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "single_quote": true,
        "array_syntax": {
            "syntax": "short"
        }
    },
    "exclude": [
        "vendor",
        "storage",
        "bootstrap/cache"
    ]
}
